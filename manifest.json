{
  "manifest_version": 3,
  "name": "Tabster",
  "version": "1.0.0",
  "description": "A simplified Chrome extension for tab management - UI only",
  "icons": {
    "16": "icons/tabster_logo.png",
    "32": "icons/tabster_logo.png",
    "48": "icons/tabster_logo.png",
    "128": "icons/tabster_logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/tabster_logo.png",
      "32": "icons/tabster_logo.png",
      "48": "icons/tabster_logo.png",
      "128": "icons/tabster_logo.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "tabGroups"
  ],
  "web_accessible_resources": [
    {
      "resources": ["confirmation.html", "css/*", "js/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 